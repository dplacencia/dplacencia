---
import type { Locale, Translations } from "../i18n";
const { t, locale } = Astro.props as { t: Translations; locale: Locale };
---

<section class="space-y-8">
  <div class="space-y-6">
    <p class="text-xs uppercase tracking-[0.25em] text-sky-400/80">
      {t.hero.label}
    </p>

    <h1 class="text-3xl font-semibold leading-tight tracking-tight md:text-4xl md:leading-tight max-w-4xl">
      {t.hero.title}
    </h1>

    <p class="text-base leading-relaxed text-slate-700 dark:text-slate-200 md:text-lg max-w-3xl">
      {t.hero.subtitle}
    </p>

    <div class="grid gap-3 md:grid-cols-3">
      {t.hero.cards.map((card) => (
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-800 dark:bg-slate-900/70">
          <p class="mb-1 font-semibold text-slate-900 dark:text-slate-100">{card.title}</p>
          <p class="text-sm text-slate-600 dark:text-slate-300">{card.body}</p>
        </div>
      ))}
    </div>

    <div class="flex flex-wrap gap-3 pt-1 text-xs md:text-sm">
      {t.hero.tech.map((item) => (
        <span class="rounded-full border border-slate-200 bg-white px-3 py-1 text-slate-700 dark:border-slate-700 dark:bg-transparent dark:text-slate-200">
          {item}
        </span>
      ))}
    </div>

      <div class="flex flex-wrap gap-3 pt-3">
        <a
          href={locale === "es" ? "/es/services" : "/services"}
          class="inline-flex items-center rounded-lg bg-sky-500 px-4 py-2 text-sm font-medium text-white hover:bg-sky-400"
        >
          {t.hero.ctas.primary}
        </a>
        <a
          href={locale === "es" ? "/es/contact" : "/contact"}
          class="inline-flex items-center rounded-lg border border-slate-300 px-4 py-2 text-sm font-medium text-slate-900 hover:border-sky-400 dark:border-slate-700 dark:text-slate-100"
        >
          {t.hero.ctas.secondary}
        </a>
        <a
          href="https://www.malt.es/profile/danielplacencia?overview"
          class="inline-flex items-center rounded-lg border border-sky-500/60 px-4 py-2 text-sm font-medium text-slate-900 hover:border-sky-500 dark:text-slate-100"
          rel="noopener"
        >
          {t.hero.ctas.tertiary}
        </a>
      </div>
  </div>
</section>

  <section class="mt-14 grid gap-6 md:grid-cols-2 text-base text-slate-700 dark:text-slate-200">
    <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm dark:border-slate-800 dark:bg-slate-900/70">
      <h2 class="mb-3 text-xs font-semibold uppercase tracking-[0.22em] text-slate-400">{t.hero.outcomesTitle}</h2>
      <ul class="list-disc list-inside space-y-2">
        {t.hero.outcomes.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-5 text-sm shadow-sm dark:border-slate-800 dark:bg-slate-900/60">
      <h3 class="mb-2 font-semibold text-slate-900 dark:text-slate-100">{t.hero.bestFitTitle}</h3>
      <p class="text-slate-600 dark:text-slate-300">
        {t.hero.bestFit}
      </p>
    </div>
  </section>

<section class="mt-12 grid gap-4 rounded-xl border border-slate-200 bg-white p-5 shadow-sm dark:border-slate-800 dark:bg-slate-900/60">
  <div class="flex items-baseline justify-between">
    <h2 class="text-sm font-semibold uppercase tracking-[0.18em] text-slate-500 dark:text-slate-400">{t.hero.resultsTitle}</h2>
    <span class="text-[11px] text-slate-500 dark:text-slate-500">{t.hero.resultsNote}</span>
  </div>
  <div class="grid gap-4 md:grid-cols-3">
    {t.hero.results.map((item) => (
      <article class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-800/80 dark:bg-slate-900/70">
        <p class="text-sm font-semibold text-slate-900 dark:text-slate-100">{item.title}</p>
        <p class="mt-1 text-sm text-slate-600 dark:text-slate-300">
          {item.body}
        </p>
      </article>
    ))}
  </div>
</section>

<section class="mt-12 space-y-4">
  <div class="flex items-center justify-between">
    <h2 class="text-sm font-semibold uppercase tracking-[0.18em] text-slate-500 dark:text-slate-400">{t.hero.processTitle}</h2>
    <span class="text-[11px] text-slate-500 dark:text-slate-500">{t.hero.processNote}</span>
  </div>
  <div class="grid gap-3 md:grid-cols-4">
    {t.hero.processSteps.map((step) => (
      <article class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-800 dark:bg-slate-900/60">
        <p class="text-sm font-semibold text-slate-900 dark:text-slate-100">{step.title}</p>
        <p class="mt-1 text-sm text-slate-600 dark:text-slate-300">{step.body}</p>
      </article>
    ))}
  </div>
</section>
