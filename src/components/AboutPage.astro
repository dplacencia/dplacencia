---
import type { Locale, Translations } from "../i18n";
const { t } = Astro.props as { t: Translations; locale: Locale };
---

<section class="space-y-6 text-base text-slate-700 dark:text-slate-300">
  <h1 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">{t.about.heading}</h1>
  <p>
    {t.about.intro}
  </p>

  <section class="space-y-3">
    <h2 class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-500 dark:text-slate-400">{t.about.recentWork}</h2>
    <ul class="space-y-3">
      {t.about.roles.map((role) => (
        <li>
          <span class="font-semibold text-slate-900 dark:text-slate-100">{role.title}</span>
          <span class="ml-2 text-[11px] text-slate-500 dark:text-slate-400">{role.dates}</span>
          <div class="text-sm text-slate-600 dark:text-slate-300">{role.body}</div>
        </li>
      ))}
    </ul>
  </section>

  <section class="grid gap-3 md:grid-cols-2">
    <div class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-800 dark:bg-slate-900/60">
      <p class="text-xs font-semibold uppercase tracking-[0.18em] text-slate-500 dark:text-slate-400">{t.about.credentialsTitle}</p>
      <ul class="mt-2 space-y-1 text-sm text-slate-700 dark:text-slate-200">
        {t.about.credentials.map((cred) => (
          <li>
            {cred.link ? (
              <a href={cred.link} class="text-sky-600 hover:underline dark:text-sky-400" rel="noopener">
                {cred.label}
              </a>
            ) : (
              cred.label
            )}
            {cred.suffix ? <span class="text-slate-500 dark:text-slate-400">{cred.suffix}</span> : null}
          </li>
        ))}
      </ul>
    </div>
    <div class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-800 dark:bg-slate-900/60">
      <p class="text-xs font-semibold uppercase tracking-[0.18em] text-slate-500 dark:text-slate-400">{t.about.languagesTitle}</p>
      <ul class="mt-2 space-y-1 text-sm text-slate-700 dark:text-slate-200">
        {t.about.languages.map((lang) => (
          <li>{lang}</li>
        ))}
      </ul>
    </div>
  </section>
</section>
