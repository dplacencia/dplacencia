---
import type { Locale, Translations } from "../i18n";
const { t, locale } = Astro.props as { t: Translations; locale: Locale };
---

<section class="space-y-4">
  <h1 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">{t.services.heading}</h1>
  <p class="text-base text-slate-700 dark:text-slate-300">
    {t.services.intro}
  </p>
  <p class="text-sm text-slate-500 dark:text-slate-400">
    {t.services.learnMore}{" "}
    <a href={locale === "es" ? "/es/working-together" : "/working-together"} class="text-sky-600 hover:underline dark:text-sky-400">
      {t.services.learnMoreLink}
    </a>
  </p>

  <div class="grid gap-4 md:grid-cols-2">
    {t.services.offers.map((offer) => (
      <section class="space-y-3 rounded-xl border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-800 dark:bg-slate-900/60">
        <div class="flex items-start justify-between gap-3">
          <h2 class="text-lg font-medium text-slate-900 dark:text-slate-100">{offer.title}</h2>
          {offer.duration ? <span class="text-[11px] text-slate-500 dark:text-slate-400">{offer.duration}</span> : null}
        </div>
        <p class="text-sm text-slate-700 dark:text-slate-300">
          {offer.description}
        </p>
        {offer.items.length ? (
          <ul class="list-disc list-inside space-y-1 text-sm text-slate-700 dark:text-slate-200">
            {offer.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        ) : null}
        <p class="text-[11px] text-slate-500 dark:text-slate-400">{offer.note}</p>
      </section>
    ))}
  </div>
</section>
