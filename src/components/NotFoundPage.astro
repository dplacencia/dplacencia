---
import type { Locale, Translations } from "../i18n";
const { t, locale } = Astro.props as { t: Translations; locale: Locale };
---

<div class="mx-auto max-w-xl space-y-4 text-center">
  <p class="text-xs uppercase tracking-[0.18em] text-slate-500 dark:text-slate-400">{t.notFound.label}</p>
  <h1 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">{t.notFound.heading}</h1>
  <p class="text-sm text-slate-600 dark:text-slate-300">
    {t.notFound.body}
  </p>
  <div class="flex flex-wrap justify-center gap-3 text-sm">
    <a href={locale === "es" ? "/es" : "/"} class="rounded-lg bg-sky-500 px-4 py-2 font-medium text-white hover:bg-sky-400">
      {t.notFound.home}
    </a>
    <a
      href="mailto:contact@dplacencia.com?subject=Broken%20link%20on%20dplacencia.com"
      class="rounded-lg border border-slate-300 px-4 py-2 font-medium text-slate-800 hover:border-sky-400 dark:border-slate-700 dark:text-slate-100"
    >
      {t.notFound.report}
    </a>
  </div>
</div>
